Algoritmo "impar ou par "




Var
   numero : inteiro




Inicio

      escreval (" escreva um numero")
      leia (numero)
      
      se (numero mod 2) = 0 entao
      
      escreval (numero, " este é par numero Par")
      
      senao
      
      escreval (numero, "este numero é impar")
      
      
      fimse



Fimalgoritmo